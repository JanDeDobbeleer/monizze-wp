<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:converters="using:Monizze.Converters">

    <SolidColorBrush x:Key="MonizzeDarkBlue">#243146</SolidColorBrush>
    <SolidColorBrush x:Key="MonizzeOrange">#DA670A</SolidColorBrush>
    <SolidColorBrush x:Key="MonizzeLightBlue">#2197C6</SolidColorBrush>

    <x:Double x:Key="TinyFontSize">9</x:Double>
    <x:Double x:Key="SmallFontSize">11</x:Double>
    <x:Double x:Key="NormalFontSize">15</x:Double>
    <x:Double x:Key="MediumFontSize">17</x:Double>
    <x:Double x:Key="LargeFontSize">23</x:Double>
    <x:Double x:Key="ExtraLargeFontSize">27</x:Double>

    <converters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>

    <Style TargetType="ProgressRing" x:Key="ProgressRingStyle">
        <Setter Property="Width" Value="50"/>
        <Setter Property="Height" Value="50"/>
        <Setter Property="IsActive" Value="True"/>
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Foreground" Value="{StaticResource MonizzeDarkBlue}"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
    </Style>
</ResourceDictionary>