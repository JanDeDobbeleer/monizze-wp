<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:converters="using:Monizze.Converters">

    <SolidColorBrush x:Key="MonizzeDarkBlue">#243146</SolidColorBrush>
    <SolidColorBrush x:Key="MonizzeOrange">#DA670A</SolidColorBrush>
    <SolidColorBrush x:Key="MonizzeLightBlue">#2197C6</SolidColorBrush>

    <converters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>

    <Style TargetType="ProgressRing" x:Key="ProgressRingStyle">
        <Setter Property="Width" Value="100"/>
        <Setter Property="Height" Value="100"/>
        <Setter Property="IsActive" Value="True"/>
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Foreground" Value="{StaticResource MonizzeLightBlue}"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
    </Style>
</ResourceDictionary>